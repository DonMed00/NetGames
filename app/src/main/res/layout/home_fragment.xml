<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgra"
    android:padding="@dimen/main_margin_1x">


    <TextView
        android:id="@+id/emptyView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_games_black_24dp"
        android:drawablePadding="@dimen/main_margin_1x"
        android:drawableTint="@color/white"
        android:text="@string/search_no_games2"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblAction"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_action"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstAction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblAction" />

            <TextView
                android:id="@+id/lblAdventure"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_adventures"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstAction" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstAdventure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblAdventure" />

            <TextView
                android:id="@+id/lblArcade"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_arcade"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstAdventure" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstArcade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblArcade" />

            <TextView
                android:id="@+id/lblSports"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_sports"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstAdventure" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstSports"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSports" />


            <TextView
                android:id="@+id/lblStrategy"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_strategy"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstSports" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstStrategy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblStrategy" />


            <TextView
                android:id="@+id/lblPuzzle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_puzzle"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstSports" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstPuzzle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblPuzzle" />




            <TextView
                android:id="@+id/lblSimulation"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginstart_lbl_home"
                android:layout_marginTop="@dimen/margintop_lbl_home"
                android:text="@string/home_simulation"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstStrategy" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstSimulation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_height"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSimulation" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>